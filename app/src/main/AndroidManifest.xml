<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.tvapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:icon="@drawable/ic_launcher"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar"
        >
        <activity
            android:name="com.example.tvapp.activity.GuideActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.tvapp.activity.TVMain">

        </activity>
        <activity android:name="com.example.tvapp.activity.AskListActivity" >
        </activity>
        <activity android:name="com.example.tvapp.activity.TextActivity" >
        </activity>
        <activity android:name="com.example.tvapp.activity.VideoActivity" >
        </activity>
        <activity
            android:name="com.example.tvapp.activity.VideoInfoActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        </activity>
        <activity android:name="com.example.tvapp.activity.FMActivity" >
        </activity>
        <activity android:name="com.example.tvapp.activity.AskActivity" >
        </activity>
        <activity android:name="com.example.tvapp.activity.PsyTestActivity" >
        </activity>
        <activity android:name="com.example.tvapp.activity.PsyTestInfoActivity" >
        </activity>
        <activity
            android:name="io.vov.vitamio.activity.InitActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>
